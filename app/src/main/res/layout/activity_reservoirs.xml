<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reservoirs">

    <include
        android:id="@+id/main_toolbar"
        layout="@layout/app_bar_layout" />

    <ProgressBar
        android:id="@+id/load_water_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/waterlevel_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reservoir_a"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"

        android:layout_marginTop="101dp"
        android:text="Water Level:"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/show_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reservoir_a"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/waterlevel_text"
        android:text="---"
        android:textSize="18dp"
        android:textColor="@android:color/black" />


    <TextView
        android:id="@+id/blink_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/show_data"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:text="Warning: Water Level too low"
        android:visibility="gone"
        android:textSize="22dp"
        android:textColor="@android:color/holo_red_dark" />


</RelativeLayout>